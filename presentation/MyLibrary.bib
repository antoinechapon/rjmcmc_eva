@article{ben_daoued_modeling_2020,
	title = {Modeling dependence and coincidence of storm surges and high tide: methodology, discussion and recommendations based on a simplified case study in Le Havre (France)},
	volume = {20},
	issn = {1684-9981},
	url = {https://nhess.copernicus.org/articles/20/3387/2020/},
